<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_theme"
    android:orientation="vertical"
    tools:context=".mvp.setting.SettingDiscountActivity">

    <include layout="@layout/left_back_titlebar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/line_gray"
        android:gravity="left|center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/discount_setting_choose"
        android:textColor="@color/input_unconfirm"
        android:textSize="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/discount_setting_cash"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <RelativeLayout
            android:id="@+id/discount_setting_cash_cb_layout"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <CheckBox
                android:id="@+id/discount_setting_cash_cb"
                android:layout_width="27dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/receipt_rb_selector"
                android:button="@null"
                android:checked="true"
                android:clickable="false"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/discount_setting_cash_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/discount_setting_cash_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:hint="@string/discount_setting_cashamount"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/input_unconfirm"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="13dp"/>
    </RelativeLayout>

    <View
        android:layout_width="16dp"
        android:layout_height="1dp"
        android:layout_gravity="left"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/discount_setting_percent"
            android:textColor="@color/black"
            android:textSize="16dp"/>

        <RelativeLayout
            android:id="@+id/discount_setting_percent_cb_layout"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <CheckBox
                android:id="@+id/discount_setting_percent_cb"
                android:layout_width="27dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/receipt_rb_selector"
                android:button="@null"
                android:clickable="false"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/discount_setting_percent_rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/discount_setting_percent_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/transparent"
            android:hint="@string/discount_setting_percentamount"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textColorHint="@color/input_unconfirm"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="13dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/discount_setting_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/setting_confirm_background"
        android:text="@string/discount_setting_confirm"
        android:textColor="@color/white"/>

</LinearLayout>