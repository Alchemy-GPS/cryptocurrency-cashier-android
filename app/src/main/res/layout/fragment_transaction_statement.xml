<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_theme"
    android:orientation="vertical">

    <TextView
        android:id="@+id/transaction_statement_newest_data"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/line_gray"
        android:gravity="left|center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/transaction_newest_data"
        android:textColor="@color/input_unconfirm"
        android:textSize="12dp"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/transaction_statement_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadMoreWhenContentNotFull="false">

        <com.achpay.wallet.widget.ClassicHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlEnableLastTime="false"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_transaction_statement_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="Translate"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>