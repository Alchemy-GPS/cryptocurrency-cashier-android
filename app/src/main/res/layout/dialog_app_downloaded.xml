<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/dialog_downloaded_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/dialog_downloaded_title"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/dialog_downloaded_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_downloaded_title"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:lineSpacingExtra="11dp"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:text="@string/dialog_downloaded_info"
            android:textColor="@color/input_unconfirm"
            android:textSize="12dp"/>

        <LinearLayout
            android:id="@+id/dialog_downloaded_bottom"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/dialog_downloaded_info"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_downloaded_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:background="@drawable/update_button_background"
                android:gravity="center"
                android:text="@string/dialog_update_confirm"
                android:textColor="@color/white"
                android:textSize="18dp"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>