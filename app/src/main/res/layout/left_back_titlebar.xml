<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentTop="true"
    android:layout_gravity="top"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/left_titlebar_back"
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="14dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/arr_back"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/left_titlebar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/left_titlebar_back"
        android:text="返回"
        android:textColor="@color/black"
        android:textSize="16dp"/>

    <RelativeLayout
        android:id="@+id/titlebar_right_layout"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/titlebar_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:text="实时汇率"
            android:textColor="@color/receipt_address"
            android:textSize="14dp"/>

    </RelativeLayout>

</RelativeLayout>