<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/item_mine_more"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:gravity="left">
        <TextView
            android:text="More"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_mine_common"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@mipmap/box_finance"
        android:gravity="left">

        <ImageView
            android:id="@+id/item_asset_coinicon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/box_btc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="@color/trans_black"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_asset_coinamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.00000000"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=" "
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/item_asset_cointype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="BTC"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="12dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
